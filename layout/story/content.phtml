<?php if ($tsx['story']['postType'] == 'ad'): ?>
  <?php echo tsx_LoadPage('story/includes/advertisement'); ?>
<?php else: ?>
  <?php if ($tsx['story']['postType'] == 'job' && !empty($tsx['story']['job_id'])) {
		echo tsx_LoadPage('story/includes/job');
