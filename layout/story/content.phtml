	 	if (!empty($tsx['story']['fund_raise_id'])) {
	 		$tsx['story']['fund'] = GetFundByRaiseId($tsx['story']['fund_raise_id'],$tsx['story']['user_id']);
	 		$tsx['story']['fund']['fund']['title'] = stripslashes($tsx['story']['fund']['fund']['title']);
	 	}
	 	if (!empty($tsx['story']['fund_id'])) {
	 		$tsx['story']['fund_data'] = GetFundingById($tsx['story']['fund_id']);
	 		$tsx['story']['fund_data']['title'] = stripslashes($tsx['story']['fund_data']['title']);
	 	}
	 	
	 	echo tsx_LoadPage('story/includes/post-layout');
	 }else if (!empty($tsx['story']['product_id']) && !empty($tsx['story']['product']) && !empty($tsx['story']['product']['images']) && $tsx['page']  == 'story') {
		 echo tsx_LoadPage('story/includes/product_full');
	 }else if ( is_array($tsx['story']) ): ?>
  <?php echo tsx_LoadPage('story/includes/post-layout'); ?>
