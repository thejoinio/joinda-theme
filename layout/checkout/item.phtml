	<script>
		function increaseValueMax<?php echo $tsx['product']['id'];?>() {
			var value = parseInt(document.getElementById('qty_<?php echo $tsx['product']['id'];?>').value, 10);
			value = isNaN(value) ? 0 : value;
			value++;
			document.getElementById('qty_<?php echo $tsx['product']['id'];?>').value = value;
			ChangeQty('#qty_<?php echo $tsx['product']['id'];?>','<?php echo $tsx['product']['id'];?>');
		}
		function decreaseValueMax<?php echo $tsx['product']['id'];?>() {
			var value = parseInt(document.getElementById('qty_<?php echo $tsx['product']['id'];?>').value, 10);
			value = isNaN(value) ? 0 : value;
			value < 1 ? value = 1 : '';
			value--;
			document.getElementById('qty_<?php echo $tsx['product']['id'];?>').value = value;
			ChangeQty('#qty_<?php echo $tsx['product']['id'];?>','<?php echo $tsx['product']['id'];?>');
		}
