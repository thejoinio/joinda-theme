    <div class="prod_info">
        <h4><a href="<?php echo $tsx['product']['url'];?>" data-ajax="?link1=post&id=<?php echo $tsx['product']['seo_id']?>"><?php echo $tsx['product']['name'];?></a></h4>
		<p><a href="<?php echo $tsx['product']['user_data']['url'];?>" data-ajax="?link1=timeline&u=<?php echo $tsx['product']['user_data']['username'];?>"><?php echo $tsx['product']['user_data']['name'];?></a></p>
        <div class="price-wrap">
			<div class="quantity">
				Qty <div class="ch_qty_toggle">
					<div class="value-button" onclick="decreaseValueMax<?php echo $tsx['product']['id'];?>()">
